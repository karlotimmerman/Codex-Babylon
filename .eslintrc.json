{
    "env": {
        "browser": true,
        "node": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "plugin:react-hooks/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "comma-dangle": [
            "error",
            "never"
        ],
        "import/extensions": "off",
        "import/order": "off",
        "indent": [
            "error",
            4
        ],
        "linebreak-style": "off",
        "max-len": [
            "warn",
            174
        ],
        "no-nested-ternary": "off",
        "quotes": [
            "error",
            "double"
        ],
        "react/display-name": "off",
        "react/destructuring-assignment": "off",
        "react/jsx-filename-extension": "off",
        "react/jsx-indent-props": [
            "error",
            4
        ],
        "react/jsx-props-no-spreading": "off",
        "react/prop-types": "off",
        "react/require-default-props": "off",
        "react/sort-comp": "off",
        "semi": "off"
    },
    "settings": {
        "react": {
            "pragma": "React",
            "version": "17.0"
        },
        "import/resolver": {
            "node": {
                "extensions": [
                    ".js",
                    ".jsx",
                    ".ts",
                    ".tsx"
                ]
            }
        }
    },
    "overrides": [
        {
            "files": [
                "**/*.ts"
            ],
            "parser": "@typescript-eslint/parser",
            "rules": {
                "no-undef": "off"
            }
        }
    ]
}